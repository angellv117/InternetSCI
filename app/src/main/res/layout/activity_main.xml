<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/letrero2"
        android:layout_width="188dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/architects_daughter"
        android:gravity="right"
        android:text="BINVENIDO A SCI APP"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="327dp"
        android:layout_height="550dp"
        android:background="@drawable/styles_layouts"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.495">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="229dp"
            android:layout_height="211dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="82dp"
            android:layout_marginLeft="82dp"
            android:layout_marginEnd="77dp"
            android:layout_marginRight="77dp"
            android:contentDescription="@string/todo"
            android:drawablePadding="12dp"
            app:srcCompat="@drawable/logon" />

        <EditText
            android:id="@+id/correo"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_below="@id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:autofillHints=""
            android:background="@drawable/estilo_edit"
            android:drawableLeft="@drawable/cambio_correo_icon"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/architects_daughter"
            android:freezesText="false"
            android:hint="@string/correo_electronico"
            android:inputType="textEmailAddress"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#9F9F9F"
            android:textColorLink="#E91E63"
            android:textIsSelectable="false"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/contraseña"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_below="@id/correo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:autofillHints=""
            android:background="@drawable/estilo_edit"
            android:drawableLeft="@drawable/cambio_contrasena_icon"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/architects_daughter"
            android:hint="@string/contrase_a"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#9F9F9F"
            android:textColorLink="#E91E63"
            android:textIsSelectable="false"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/inicio"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@id/contraseña"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:onClick="iniciar"
            android:text="@string/iniciar_seci_n"
            app:backgroundTint="#9C27B0"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/inicio"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="69dp"
            android:layout_marginRight="69dp"
            android:fontFamily="@font/architects_daughter"
            android:onClick="resuperar"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/inicio"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:fontFamily="@font/architects_daughter"
            android:onClick="registro"
            android:text="¿No tienes cuenta? Registrate aquí"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:textStyle="normal|bold|italic" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>